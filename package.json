{
  "name": "@pinegraph/react-website-cdk-constructs",
  "scripts": {
    "build": "tsc",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/node": "^14",
    "jest": "^28.1.2",
    "jest-junit": "^13",
    "json-schema": "^0.4.0",
    "npm-check-updates": "^12",
    "prettier": "^2.7.1",
    "standard-version": "^9",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "main": "lib/index.js",
  "license": "Apache-2.0",
  "version": "1.0.0",
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/(test|src)/**/?(*.)+(spec|test).ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.dev.json"
      }
    }
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "aws-cdk-lib": "^2.30.0",
    "constructs": "^10.1.43",
    "prettier": "^2.7.1"
  },
  "description": "A CDK construct for hosting a secure single page application (i.e. client side rendering). Ideal for websites written in react.",
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pinegraph/React-Website-CDK-Constructs.git"
  },
  "keywords": [
    "react",
    "cdk",
    "spa",
    "single page application",
    "metatags",
    "csp",
    "content security policy"
  ],
  "author": "YoshikiMiki",
  "bugs": {
    "url": "https://github.com/Pinegraph/React-Website-CDK-Constructs/issues"
  },
  "homepage": "https://github.com/Pinegraph/React-Website-CDK-Constructs#readme"
}
